---
import { siteConfig } from '~/config/site';
import SocialLinks from '~/components/social-links.astro';

const currentYear = new Date().getFullYear();
---

<footer class="bg-theme-bg-secondary mt-16 w-full">
  <div
    class="mx-auto flex max-w-3xl flex-col items-center justify-center space-y-2 px-4 py-4 pb-8 text-center md:flex-row md:justify-between md:space-y-0"
  >
    <div class="text-theme-text font-serif text-lg font-medium">
      &copy; {currentYear} Shovan Chatterjee
    </div>

    <SocialLinks location="footer" />
  </div>
</footer>
