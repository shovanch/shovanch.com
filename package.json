{
  "name": "shovanch.com",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "submodule-init": "git submodule sync --recursive && git submodule update --init --recursive --remote",
    "dev": "pnpm run submodule-init && node scripts/sync-obsidian-images.js && astro dev",
    "dev:watch": "pnpm run submodule-init && node scripts/watch-obsidian-images.js & astro dev",
    "build": "bash scripts/vercel-build.sh",
    "preview": "astro preview",
    "astro": "astro",
    "prod": "pnpm run build && pnpm run preview",
    "sync-obsidian": "node scripts/sync-obsidian-images.js",
    "clear-cache": "node scripts/clear-image-cache.js",
    "regenerate-images": "node scripts/regenerate-image-cache.js",
    "analyze": "astro build --analyze",
    "analyze:bundle": "node scripts/bundle-analyzer.js",
    "build:analyze": "pnpm run build && pnpm run analyze:bundle",
    "build:ci": "astro check && astro build",
    "typecheck": "astro check",
    "format": "prettier --write .",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@astrojs/markdown-remark": "6.3.5",
    "@astrojs/mdx": "4.3.3",
    "@astrojs/react": "^4.3.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.5.0",
    "@astrojs/vercel": "^8.2.5",
    "@codesandbox/sandpack-react": "^2.20.0",
    "@codesandbox/sandpack-themes": "^2.0.21",
    "@tailwindcss/vite": "^4.1.11",
    "@vercel/og": "^0.8.5",
    "astro": "^5.13.0",
    "astro-expressive-code": "^0.41.3",
    "astro-pagefind": "^1.8.3",
    "clsx": "^2.1.1",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "hast-util-find-and-replace": "^5.0.1",
    "nprogress": "^0.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rehype-autolink-headings": "^7.1.0",
    "sharp": "^0.34.3",
    "shiki": "^3.9.2",
    "tailwindcss": "^4.1.11",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "yet-another-react-lightbox": "^3.25.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@tailwindcss/typography": "^0.5.16",
    "@types/hast": "^3.0.4",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/unist": "^3.0.3",
    "jsdom": "^26.1.0",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rehype-stringify": "^10.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "remark-stringify": "^11.0.0",
    "typescript": "^5.9.2",
    "vitest": "^2.0.0"
  }
}
